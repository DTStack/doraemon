{
    "compilerOptions": {
        "noEmit": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es6","es2016","dom" ],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [
                "./app/web/*"
            ]
        },
        "typeRoots": [
            "node",
            "node_modules/@types",
            "./app/web/typeings"
        ]
    },
    "exclude": [
        "node_modules",
        "app/web/view/*"
    ],
    "include": [
        "./app/web/**/*"
    ],
}
